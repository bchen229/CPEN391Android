<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/background_dark">

    <!-- Paired Devices -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="@string/pairedDevices"
        android:id="@+id/pairedDevicesBanner"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <ListView
        android:id="@+id/pairedDevicesList"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/primary_material_dark"
        android:padding="0dp">
    </ListView>

    <!-- Discovered Devices -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="@string/discoveredDevices"
        android:id="@+id/discoveredDevicesBanner"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <ListView
        android:id="@+id/discoveredDevicesList"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/primary_material_dark"
        android:padding="0dp">
    </ListView>

</LinearLayout>